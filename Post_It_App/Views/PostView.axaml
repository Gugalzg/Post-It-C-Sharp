<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewmodels="using:Post_It_App.ViewModels"
             mc:Ignorable="d"
			 d:DesignWidth="800"
			 d:DesignHeight="450"
             x:Class="Post_It_App.Views.PostView"
			 x:DataType="viewmodels:PostViewModel"
			 x:CompileBindings="True"
			 >
	<StackPanel
		Spacing="5"
		Width="200"
		>
		<Border
			CornerRadius="10"
			ClipToBounds="True"
			>
			<Panel
				Background="#6B6B71"
				>
				<Panel
					Height="200"
					>
					<Grid Height="200">
						<TextBlock
							Text="{Binding Title}"
							Foreground="White"
							VerticalAlignment="Top"
							FontSize="20"
							Margin="15,10,0,0" />
						<TextBlock
							Text="{Binding Description}"
							Foreground="White"
							FontSize="20"
							Margin="15,50,0,0" />

					</Grid>
				</Panel>
			</Panel>
		</Border>
	</StackPanel>
</UserControl>
